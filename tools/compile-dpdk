set -e
set -u
set -f


_program_path_find()
{
    if [ "${_program_fattening_program_path+set}" = 'set' ]; then
        printf '%s\n' "$_program_fattening_program_path"

    elif [ "${0%/*}" = "$0" ]; then

        # We've been invoked by the interpreter as, say, bash program
        if [ -r "$0" ]; then
            pwd -P
        # Clutching at straws; probably run via a download, anonymous script, etc, weird execve, etc
        else
            printf '\n'
        fi

    else

        # We've been invoked with a relative or absolute path (also when invoked via PATH in a shell)

        _program_path_find_parentPath()
        {
            parentPath="${scriptPath%/*}"
            if [ -z "$parentPath" ]; then
                parentPath='/'
            fi
            cd "$parentPath" 1>/dev/null
        }

        # pdksh / mksh have problems with unsetting a variable that was never set...
        if [ "${CDPATH+set}" = 'set' ]; then
            unset CDPATH
        fi

        if command -v realpath 1>/dev/null 2>/dev/null; then
            (
                scriptPath="$(realpath "$0")"

                _program_path_find_parentPath
                pwd -P
            )
        elif command -v readlink 1>/dev/null 2>/dev/null; then
            (
                scriptPath="$0"

                while [ -L "$scriptPath" ]
                do
                    _program_path_find_parentPath
                    scriptPath="$(readlink "$scriptPath")"
                done

                _program_path_find_parentPath
                pwd -P
            )
        else
            # This approach will fail in corner cases where the script itself is a symlink in a path not parallel with the concrete script
            (
                scriptPath="$0"

                _program_path_find_parentPath
                pwd -P
            )
        fi

    fi
}

compile_dpdk_fail()
{
	local message="$1"
	
	printf 'compile-dpdk:FAIL:%s\n' "$message" 1>&2
	exit 1
}

_compile_dpdk_prepareForMacOSX_brewInstall()
{
	compile_dpdk_ensureRequiredBinariesArePresent brew
		
	local packageName
	if ! brew ls --versions "$packageName" 1>/dev/null 2>/dev/null; then
		brew install "$packageName"
	fi
}

compile_dpdk_prepareForMacOSX()
{
	_compile_dpdk_prepareForMacOSX_brewInstall gnu-sed
	_compile_dpdk_prepareForMacOSX_brewInstall make
	_compile_dpdk_prepareForMacOSX_brewInstall libelf
	_compile_dpdk_prepareForMacOSX_brewInstall coreutils
	_compile_dpdk_prepareForMacOSX_brewInstall FiloSottile/musl-cross/musl-cross
}

compile_dpdk_ensureRequiredBinariesArePresent()
{
	local reason="$1"
	shift 1

	local binary
	local missing=false
	for binary in "$@"
	do
		if ! command -v "$binary" 1>/dev/null 2>/dev/null; then
			printf '%s\n' "The binary '$binary' needs to be in the path" 1>&2
			missing=true
		fi
	done

	if $missing; then
		compile_dpdk_fail "Please make sure that the missing binaries are installed because '$reason'"
	fi
}

compile_dpdk_prepareDpdkFolders()
{
	compile_dpdk_ensureRequiredBinariesArePresent rm mkdir
	
	# We do not delete the src dir, as we use rsync to populate it
	rm -rf "$dpdkBuildDir" "$dpdkDestDir" "$dpdkMuslFixesDir"
	mkdir -m 0755 -p "$dpdkSrcDir"
	mkdir -m 0755 -p "$dpdkBuildDir"
	mkdir -m 0755 -p "$dpdkDestDir"
	mkdir -m 0755 -p "$dpdkMuslFixesDir"/sys "$dpdkMuslFixesDir"/bits
}

compile_dpdk_installSourceAndOverrideBrokenStuff()
{
	compile_dpdk_ensureRequiredBinariesArePresent rsync
	
	rsync --quiet --archive --delete "$homeFolder"/lib/dpdk/ "$dpdkSrcDir"/
	rsync --quiet --archive "$configurationFolderPath"/overrides/ "$dpdkSrcDir"/
}

compile_dpdk_muslFixes()
{
	compile_dpdk_ensureRequiredBinariesArePresent cat
	
	# (1) Make an useful io.h
	(
		cat "$muslIncludeFolder"/bits/io.h
		cat "$configurationFolderPath"/musl-fixes/io.extra.h
	) >"$dpdkMuslFixesDir"/bits/io.h

	# (2) Install sys/queue.h
	cat "$configurationFolderPath"/musl-fixes/queue.h >"$dpdkMuslFixesDir"/sys/queue.h
}

# These fixes have been incorporated into Libertine Linux's recipe, too, so there is some duplication
compile_dpdk_patchDpdkToWorkWithMuslAndAlpineLinux()
{
	compile_dpdk_ensureRequiredBinariesArePresent sed
	
	cd "$dpdkSrcDir" 1>/dev/null 2>/dev/null

		sed -i -e 's;#include <rte_per_lcore.h>;#include <sched.h>\n#include <rte_per_lcore.h>;g' lib/librte_eal/common/include/rte_lcore.h
		sed -i -e 's;#include <string.h>;#include <string.h>\n#include <fcntl.h>;g' lib/librte_eal/linuxapp/eal/eal_hugepage_info.c
		sed -i -e 's;#include <errno.h>;#include <errno.h>\n#include <fcntl.h>;g' lib/librte_eal/linuxapp/eal/eal_memory.c
		sed -i -e 's;#include <string.h>;#include <string.h>\n#include <sys/sysmacros.h>\n;g' lib/librte_eal/linuxapp/eal/eal_pci_uio.c
		sed -i -e 's;#define PAGE_SIZE;#undef PAGE_SIZE\n#define PAGE_SIZE;g' lib/librte_eal/linuxapp/eal/eal_pci_vfio.c
		sed -i -e 's;#include <string.h>;#include <string.h>\n#include <fcntl.h>;g' app/test/test_eal_flags.c
		sed -i -e 's;uint hash_key_len;uint8_t hash_key_len;g' app/test-pmd/testpmd.c app/test-pmd/testpmd.h app/test-pmd/config.c

		# Local build assumes glibc on Linux
		case "$platform" in

			Darwin)
				# -L'"$(brew --prefix libelf)"/lib' -lelf
				# -isystem/usr/include/machine is for endian.h
				local libelfPrefix="$(brew --prefix libelf)"
				local extra="-I${libelfPrefix}/include/libelf -I${libelfPrefix}/include -isystem${dpdkSrcDir}/buildtools/pmdinfogen"
				sed -i -e 's;-g;-g '"$extra"';g' buildtools/pmdinfogen/Makefile
				#sed -i -e 's/#include <elf.h>/#include "elf.h"/g' buildtools/pmdinfogen/pmdinfogen.h
			;;

			Linux)
				# Fix for Alpine Linux was:-
				# sed -i -e 's;-g;-g -I'"$dpdkMuslFixesDir"';g' buildtools/pmdinfogen/Makefile
			;;

		esac

		# Assumes GNU tar
		sed -i -e '/--keep-newer-files/d' mk/rte.sdkinstall.mk
		sed -i -e 's;--strip-components=1 \\;--strip-components=1;g' mk/rte.sdkinstall.mk

	cd - 1>/dev/null 2>/dev/null
}

compile_dpdk_make()
{
	compile_dpdk_ensureRequiredBinariesArePresent make
	
	local configurationFilePath=config/defconfig_"$configurationName"

	cd "$dpdkSrcDir" 1>/dev/null 2>/dev/null

		local kernelSourcesPath=''
		if [ ${RTE_KERNELDIR+defined} ]; then
			kernelSourcesPath="$RTE_KERNELDIR"
		else
			kernelSourcesPath=/lib/modules/"$(uname -r)"/build
		fi

		if [ -d "$kernelSourcesPath" ]; then
			(
				printf '\nCONFIG_RTE_EAL_IGB_UIO=y\n'
				printf '\nCONFIG_RTE_KNI_KMOD=y\n'
				printf '\nCONFIG_RTE_LIBRTE_XEN_DOM0=n\n'
			) >>"$configurationFilePath"
		else
			(
				printf '\nCONFIG_RTE_EAL_IGB_UIO=n\n'
				printf '\nCONFIG_RTE_KNI_KMOD=n\n'
				printf '\nCONFIG_RTE_LIBRTE_XEN_DOM0=n\n'
			) >>"$configurationFilePath"
		fi

		printf 'CONFIG_RTE_MACHINE=%s\n' "$dpdkMachine" >>"$configurationFilePath"
		printf 'CONFIG_RTE_LIBEAL_USE_HPET=y\n' >>"$configurationFilePath"

		printf 'CONFIG_RTE_LIBRTE_I40E_16BYTE_RX_DESC=y\n' >>"$configurationFilePath"
		printf 'CONFIG_RTE_LIBRTE_I40E_ITR_INTERVAL=16\n' >>"$configurationFilePath"

		printf 'CONFIG_RTE_LIBRTE_PMD_BOND=y\n' >>"$configurationFilePath"
		printf 'CONFIG_RTE_LIBRTE_IP_FRAG=y\n' >>"$configurationFilePath"
		printf 'CONFIG_RTE_MAX_LCORE=256\n' >>"$configurationFilePath"

		make \
			--jobs $numberOfCpus \
			install \
			T="$configurationName" \
			V=1 \
			O="$dpdkBuildDir" \
			DESTDIR="$dpdkDestDir" \
			prefix=/usr/local \
			CROSS="$crossCompilerPrefix" \
			EXTRA_CFLAGS="$optimisationFlags -O3 -D_GNU_SOURCE -D_BSD_SOURCE -I$muslIncludeFolder -I$dpdkMuslFixesDir -Wno-pointer-to-int-cast" \
			RTE_KERNELDIR="$kernelSourcesPath"

	cd - 1>/dev/null 2>/dev/null
}

compile_dpdk_finish()
{
	compile_dpdk_ensureRequiredBinariesArePresent rsync sed
	
	# Install musl-fixes; DPDK headers assume they are installed as a system library
	rsync -a -v "$dpdkMuslFixesDir"/ "$headersFolderPath"/

	# rte_memcpy.h fixes
	sed -i -e 's;#include <stdio.h>;#include <stdio.h>\n#include <tmmintrin.h>;g' "$headersFolderPath"/rte_memcpy.h
}

compile_dpdk_main()
{
	case "$#" in
		
		0)
			:
		;;
		
		1)
			case "$1" in
				
				-h|--help)
					printf './compile-dpdk\n'
					printf './compile-dpdk -h|--help\n'
					exit 0
				;;
				
				*)
					compile_dpdk_fail "Does not take any arguments"
				;;
				
			esac
		;;
		
		*)
			compile_dpdk_fail "Does not take any arguments"
		;;
		
	esac
	
	local programPath="$(_program_path_find)"
	cd "$programPath"/.. 1>/dev/null 2>/dev/null
		local homeFolder="$(pwd)"
	cd - 1>/dev/null 2>/dev/null
	local configurationFolderPath="$homeFolder"/compile-dpdk.conf.d

	local configurationName='x86_64-native-linuxapp-gcc'
	local crossCompilerPrefix='x86_64-linux-musl-'
	local optimisationFlags=''
	local dpdkMachine='default'
	
	local dpdkTempDir="$configurationFolderPath"/temporary
	rm -rf "$dpdkTempDir"
	mkdir -m 0700 -p "$dpdkTempDir"

	local dpdkDestDir="$dpdkTempDir"/destdir
	local dpdkSrcDir="$dpdkTempDir"/src
	local dpdkBuildDir="$dpdkTempDir"/build
	local dpdkMuslFixesDir="$dpdkTempDir"/musl-fixes
	local headersFolderPath="$dpdkDestDir"/usr/local/include/dpdk

	compile_dpdk_ensureRequiredBinariesArePresent uname
	
	local platform="$(uname)"
	case "$platform" in

		Darwin)
			compile_dpdk_prepareForMacOSX
			
			compile_dpdk_ensureRequiredBinariesArePresent brew
			
			export PATH="$(brew --prefix coreutils)"/libexec/gnubin:"$(brew --prefix gnu-sed)"/libexec/gnubin:"$PATH"

			local muslIncludeFolder="$(brew --prefix musl-cross)"/libexec/x86_64-linux-musl/include

			compile_dpdk_ensureRequiredBinariesArePresent sysctl
			local numberOfCpus="$(sysctl -n hw.ncpu)"

		;;

		Linux)
			compile_dpdk_ensureRequiredBinariesArePresent make sed x86_64-linux-musl-gcc x86_64-linux-musl-ar rm mkdir rsync cat
			local muslIncludeFolder='/usr/include'

			compile_dpdk_ensureRequiredBinariesArePresent grep
			local numberOfCpus="$(grep -c '^processor' /proc/cpuinfo)"
		;;

		*)
			compile_dpdk_fail "Only Darwin (Mac OS X) and Linux (specifically, Alpine Linux) are supported at this time"
		;;

	esac

	compile_dpdk_prepareDpdkFolders
	compile_dpdk_installSourceAndOverrideBrokenStuff
	compile_dpdk_muslFixes
	compile_dpdk_patchDpdkToWorkWithMuslAndAlpineLinux
	compile_dpdk_make
	compile_dpdk_finish
}

compile_dpdk_main "$@"
